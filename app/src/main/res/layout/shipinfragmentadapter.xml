<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/shipin_iv"
    android:background="#f00" />
    <ImageView
        android:src="@drawable/start_video_df"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_marginTop="130dp"
         android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/shipin_video_tv"
        android:text="要显示的文本内容"/>
    </FrameLayout>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="20dp"
        android:background="#542c2c"
        android:layout_height="2dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/shipin_title_tv"
        android:text="显示出来的内容"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shipin_content_tv"
        android:text="最后的文本内容"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>